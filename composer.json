{
    "name": "galaxon/math",
    "description": "PHP classes for math.",
    "type": "library",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "../Core"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-ctype": "*",
        "ext-mbstring": "*",
        "galaxon/core": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0"
    },
    "autoload": {
        "psr-4": {
            "Galaxon\\Numbers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Galaxon\\Numbers\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "php -d xdebug.mode=coverage -r \"require 'vendor/bin/phpunit';\" -- --configuration phpunit.xml --do-not-cache-result --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
